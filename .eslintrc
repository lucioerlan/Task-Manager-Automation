{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true 
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "camelcase": "off",
    "class-methods-use-this": "off",
    "comma-spacing": [2, { "before": false, "after": true }],
    "comma-style": [2, "last"],
    "eol-last": 2,
    "indent": ["error", 4, { "SwitchCase": 2 }],
    "import/extensions": 0,
    "max-len": 1,
    "no-console": "off",
    "no-empty": "error",
    "no-multiple-empty-lines": "warn",
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-unused-vars": 1,
    "no-restricted-properties": "off",
    "quotes": ["error", "single"],
    "radix" : "off",
    "semi": ["error", "always"]
  }
}